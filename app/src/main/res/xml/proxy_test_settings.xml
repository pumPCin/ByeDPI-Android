<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditTextPreference
        android:key="byedpi_proxytest_delay"
        android:title="@string/test_delay"
        android:inputType="number"
        android:defaultValue="5"
        app:useSimpleSummaryProvider="true"
        app:iconSpaceReserved="false" />

    <EditTextPreference
        android:key="byedpi_proxytest_requests"
        android:title="@string/test_requests"
        android:inputType="number"
        android:defaultValue="5"
        app:useSimpleSummaryProvider="true"
        app:iconSpaceReserved="false" />

    <EditTextPreference
        android:key="byedpi_proxytest_limit"
        android:title="@string/test_requests_limit"
        android:inputType="number"
        android:defaultValue="20"
        app:useSimpleSummaryProvider="true"
        app:iconSpaceReserved="false" />

    <EditTextPreference
        android:key="byedpi_proxytest_timeout"
        android:title="@string/test_timeout"
        android:inputType="number"
        android:defaultValue="5"
        app:useSimpleSummaryProvider="true"
        app:iconSpaceReserved="false" />

    <EditTextPreference
        android:key="byedpi_proxytest_sni"
        android:title="@string/test_settings_sni"
        android:inputType="text"
        android:defaultValue="google.com"
        app:useSimpleSummaryProvider="true"
        app:iconSpaceReserved="false" />

    <Preference
        android:key="manage_domain_lists"
        android:title="@string/domain_lists"
        android:summary="@string/domain_lists_summary"
        app:fragment="io.github.dovecoteescapee.byedpi.fragments.DomainListsFragment"
        app:iconSpaceReserved="false" />

    <SwitchPreference
        android:key="byedpi_proxytest_usercommands"
        android:title="@string/test_settings_usercommands"
        app:iconSpaceReserved="false" />

    <EditTextPreference
        android:key="byedpi_proxytest_commands"
        android:title="@string/test_settings_commands"
        android:enabled="false"
        android:inputType="textMultiLine"
        app:useSimpleSummaryProvider="true"
        app:iconSpaceReserved="false" />

</PreferenceScreen>
